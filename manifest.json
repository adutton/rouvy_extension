{
  "name": "Rouvy beautifier",
  "version": "1.1",
  "description": "Make Rouvy web great again!",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["alarms","storage","https://api.apify.com/*"],
  "content_scripts": [
    {
      "matches": [
        "https://my.rouvy.com/onlinerace"
      ],
      "js": [
        "jquery.js",
        "filter_races.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://my.rouvy.com/virtual-routes"
      ],
      "js": [
        "jquery.js",
        "manage_favourites.js"
      ],
      "run_at": "document_end"
    }],

  "default_icon": {
    "16": "images/rouvy.png",
    "32": "images/rouvy.png",
    "48": "images/rouvy.png",
    "128": "images/rouvy.png"
  },
  "icons": {
    "16": "images/rouvy.png",
    "32": "images/rouvy.png",
    "48": "images/rouvy.png",
    "128": "images/rouvy.png"
  }
}